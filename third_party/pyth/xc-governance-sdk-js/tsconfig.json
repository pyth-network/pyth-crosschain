{
  "compilerOptions": {
    "declaration": true,
    "target": "es2016",
    "module": "commonjs",
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true
  },
  "include": ["src/**/*.ts"]
}
