{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noErrorTruncation": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
