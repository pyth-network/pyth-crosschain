{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": [
        "//#install:modules",
        "clean",
        "^build",
        "build:declarations",
        "build:css-in-js",
        "build:scss",
        "build:svg"
      ]
    },
    "build:css-in-js": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.styles.ts"],
      "outputs": ["src/v2/v2-theme.css"]
    },
    "build:css-in-js:watch": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "build:declarations": {
      "dependsOn": ["//#install:modules", "^build"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx"],
      "outputs": ["dist/**/*.d.ts"]
    },
    "build:scss": {
      "dependsOn": ["//#install:modules"],
      "inputs": ["src/**/*.scss"],
      "outputs": ["dist/**/*.scss"]
    },
    "build:storybook": {
      "dependsOn": ["^build", "build:css-in-js"],
      "outputs": ["storybook-static/**"]
    },
    "build:svg": {
      "dependsOn": ["//#install:modules"],
      "inputs": ["src/**/*.svg"],
      "outputs": ["dist/**/*.svg"]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "fix:lint": {
      "dependsOn": [
        "//#install:modules",
        "fix:lint:eslint",
        "fix:lint:stylelint"
      ]
    },
    "fix:lint:eslint": {
      "dependsOn": ["//#install:modules", "^build"],
      "cache": false
    },
    "fix:lint:stylelint": {
      "dependsOn": ["//#install:modules"],
      "cache": false
    },
    "storybook": {
      "cache": false,
      "dependsOn": ["build:css-in-js"],
      "with": ["build:css-in-js:watch"]
    },
    "test:lint": {
      "dependsOn": ["test:lint:eslint", "test:lint:stylelint"]
    },
    "test:lint:eslint": {
      "dependsOn": ["//#install:modules", "^build"]
    },
    "test:lint:stylelint": {
      "dependsOn": ["//#install:modules"]
    }
  }
}
