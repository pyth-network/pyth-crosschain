{
  "compilerOptions": {
    "declaration": true,
    "composite": true,
    "declarationMap": true,
    "incremental": true,
    "target": "es2016",
    "module": "commonjs",
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true,
    "rootDir": "src/"
  },
  "include": ["src/**/*.ts"]
}
