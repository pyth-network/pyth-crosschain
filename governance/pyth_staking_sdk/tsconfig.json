{
  "extends": "@cprussin/tsconfig/base.json",
  "include": ["**/*.ts", "**/*.json"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "verbatimModuleSyntax": false,
    "noEmit": false,
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "composite": true,
    "declarationMap": true,
    "esModuleInterop": true
  }
}
