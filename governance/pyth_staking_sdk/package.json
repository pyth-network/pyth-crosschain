{
  "name": "@pythnetwork/staking-sdk",
  "version": "0.2.3",
  "description": "Pyth staking SDK",
  "type": "module",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": "20 || 22"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc --noEmit false --incremental false --declaration true --outDir ./dist",
    "fix:format": "prettier --write .",
    "fix:lint": "eslint --fix . --max-warnings 0",
    "test:format": "prettier --check .",
    "test:lint": "eslint . --max-warnings 0",
    "test:types": "tsc"
  },
  "devDependencies": {
    "@cprussin/eslint-config": "catalog:",
    "@cprussin/jest-config": "catalog:",
    "@cprussin/prettier-config": "catalog:",
    "@cprussin/tsconfig": "catalog:",
    "@solana/wallet-adapter-react": "catalog:",
    "@types/jest": "catalog:",
    "@types/node": "catalog:",
    "eslint": "catalog:",
    "jest": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  },
  "dependencies": {
    "@coral-xyz/anchor": "catalog:",
    "@pythnetwork/client": "catalog:",
    "@pythnetwork/solana-utils": "workspace:*",
    "@solana/spl-governance": "^0.3.28",
    "@solana/spl-token": "^0.3.7",
    "@solana/web3.js": "catalog:",
    "@streamparser/json": "^0.0.22",
    "zod": "catalog:"
  }
}
