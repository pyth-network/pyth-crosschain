{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build:vercelonly": {
      "env": [
        "IP_ALLOWLIST",
        "GOVERNANCE_ONLY_REGIONS",
        "WALLETCONNECT_PROJECT_ID",
        "PROXYCHECK_API_KEY",
        "MAINNET_RPC",
        "MAINNET_API_RPC",
        "BLOCKED_REGIONS",
        "AMPLITUDE_API_KEY",
        "GOOGLE_ANALYTICS_ID"
      ]
    },
    "start:dev": {
      "dependsOn": [
        "//#install:modules",
        "pull:env",
        "@pythnetwork/hermes-client#build",
        "@pythnetwork/solana-utils#build"
      ]
    }
  }
}
