{
  "bin": {
    "pyth-mcp": "./dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "pino": "catalog:",
    "zod": "^3.25.0"
  },
  "description": "MCP server for Pyth Pro real-time and historical market data",
  "devDependencies": {
    "@cprussin/tsconfig": "catalog:",
    "@pythnetwork/jest-config": "workspace:",
    "@types/node": "catalog:",
    "msw": "^2.7.3",
    "tsup": "^8.4.0",
    "tsx": "catalog:",
    "typescript": "catalog:"
  },
  "engines": {
    "node": "^24.0.0"
  },
  "exports": {
    ".": {
      "default": "./dist/index.js",
