{
  "private": true,
  "name": "@pythnetwork/pyth-app",
  "description": "A single place to view Pyth data feeds and pricing information, as well as managing your Pyth Pro subscription and API keys",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "^24.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pyth-network/pyth-crosschain",
    "directory": "apps/pyth-app"
  },
  "scripts": {
    "build:vercel": "next build",
    "fix:format": "prettier --write .",
    "fix:lint:eslint": "eslint --fix .",
    "fix:lint:stylelint": "stylelint --fix 'src/**/*.scss'",
    "pull:env": "echo 'once @pythnetwork/pyth-app has been setup in the Vercel UI, you can replace this script with the contents in the pull:env:placeholder, below, as well as the VERCEL_PROJECT_ID variable value'",
    "pull:env:placeholder": "[ $CI ] || VERCEL_ORG_ID=team_BKQrg3JJFLxZyTqpuYtIY0rj VERCEL_PROJECT_ID=TODO_FILL_ME_IN vercel env pull",
    "start:dev": "next dev --port 3344",
    "start:prod": "next start --port 3344",
    "test:format": "prettier --check .",
    "test:lint:eslint": "eslint . --max-warnings 0",
    "test:lint:stylelint": "stylelint 'src/**/*.scss' --max-warnings 0",
    "test:types": "tsc",
    "test:unit": "test-unit"
  },
  "devDependencies": {
    "@axe-core/react": "catalog:",
    "@cprussin/eslint-config": "catalog:",
    "@cprussin/prettier-config": "catalog:",
